<div class="d-flex flex-column align-items-center">
    <div class="create-char-container">
        <h2>New Character</h2>
        <div class="card-body">
            <form action="/characters/new" method="post" enctype="multipart/form-data">
                <label for="name">Name: </label>
                <input type="text" name="name" class="form-control" value="{{this.name}}">
                <br>
                <label for="species">Species: </label>
                <select name="species" class="form-select"> 
                       {{#each this.species}}
                        <option value="{{this}}">{{capitalize this}}</option> 
                       {{/each}}
                </select>    
                <br>
                <label for="homeworld">Homeworld: </label>
                <select name="homeworld" class="form-select"> 
                       {{#each this.homeworld}}
                        <option value="{{this}}">{{capitalize this}}</option>
                       {{/each}}
                </select>    
                <br>
                <label for="age">Age: </label>
                <input type="number" name="age" class="form-control age-input">
                <br>
                <label for="image" class="form-label">image:</label>
                <input type="file" name="image" class="form-control image-input">
                <br>
                <button class="btn btn-info">Create</button>
                <div class="error-message d-flex flex-column align-items-center">
                    {{#if this.errorMessage}}
                        <p style="color: red">{{this.errorMessage}}</p>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
    <form action="/characters">
        <button class="btn btn-danger cancel-create-btn">Cancel</button>
    </form>
    
