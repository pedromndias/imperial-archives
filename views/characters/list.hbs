<div class="d-flex flex-column align-items-center">

    <h2>List of Characters</h2>

    <div class="card-body">
        {{#each this.capCharacters}}
           <p class="char-list-each"><a href="/characters/{{this._id}}/details">{{this.name}}</a></p>
        {{/each}}
    </div>

    {{#if this.isModerator}}
    <div>
    <form action="/characters/new">
        <button class="btn btn-info">Add New Character</button>
    </form>
    </div>
    {{/if}}

</div>