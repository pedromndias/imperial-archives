<div class="d-flex flex-column align-items-center">

    <h3>List of Characters</h3>

    <div class="card-body">
        {{#each this.capCharacters}}
           <li><a href="/characters/{{this._id}}/details">{{this.name}}</a></li>
        {{/each}}
    </div>

    {{#if this.isModerator}}
    <div>
    <form action="/characters/new">
        <button class="btn btn-info">Add New Character</button>
    </form>
    </div>
    {{/if}}

</div>