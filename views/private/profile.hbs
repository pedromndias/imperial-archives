
    <div class="profile-main-container">
        
        <div class="profile-card">
            <img
                src="https://vignette.wikia.nocookie.net/fr.starwars/images/3/32/Dark_Vador.jpg"
                alt="{{this.username}}"
            />
            {{#if this.isModerator}}
                <p>Moderator ðŸ˜Ž</p>
            {{else if this.isAdmin}}
                <p>Admin ðŸ¤´</p>
            {{else}}
                <p>Rookie ðŸ¤–</p>
            {{/if}}
        </div>
        <h2>{{this.username}}'s Profile</h2>
        <div class="fav-char">
            <h3>Favorite Character: </h3>
            {{#if this.favoriteCharacter}}
                <a
                    class="fav-char-link"
                    href="/characters/{{this.favoriteCharacter._id}}/details"
                >
                    <img src="{{this.favoriteCharacter.image}}" alt="img" />
                    <h4>{{capitalize this.favoriteCharacter.name}}</h4>
                </a>
            {{/if}}
        </div>
    </div>
    <div class="profile-container">
        
        <div class="created-chars">
            {{#if this.isModerator}}
                <h4>My created characters:</h4>
                {{#if this.charactersFound}}
                    <div class="added-character-list">
                        {{#each this.charactersFound}}
                            <a href="/characters/{{this._id}}/details">
                                <h5>{{capitalize this.name}}</h5>
                                <img src="{{this.image}}" alt="{{this.name}}" />
                            </a>
                        {{/each}}
                    </div>
                {{else}}
                    <p>You didn't create any characters yet</p>
                {{/if}}
            {{/if}}
        </div>

        
    </div>
</div>