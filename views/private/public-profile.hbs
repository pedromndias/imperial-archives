<div class="profile-main-container">
    <h2>{{this.singleUser.username}}'s Profile</h2>
    <div class="profile-container">
        <div class="profile-card">
            <img src="https://vignette.wikia.nocookie.net/fr.starwars/images/3/32/Dark_Vador.jpg" alt="{{this.username}}">
            {{#if this.isRoleModerator}}
            <p>Moderator ðŸ˜Ž</p>
            {{else if this.isRoleAdmin}}
            <p>Admin ðŸ¤´</p>
            {{else}}
            <p>Rookie ðŸ¤–</p>
            {{/if}}
        </div>
        <div class="created-chars">
            {{#if this.isRoleModerator}}
            <h3>My created character:</h3>
            {{#if this.charactersFound}}
            <div class="added-character">
                {{#each this.charactersFound}}
                    <a href="/characters/{{this._id}}/details">
                        <h5>{{capitalize this.name}}</h5>
                        <img src="{{this.image}}" alt="{{this.name}}">
                    </a>
                {{/each}}
            </div>
            {{else}} <p>You didn't create any characters yet</p>
            {{/if}}
        </div>
            {{!-- todo Add content to substitute the added characters feature. --}}
            {{/if}}
            {{#unless this.isRoleAdmin}}
            <div class="fav-char-container card-body d-flex flex-column align-items-center">
            <h3>Favorite Character: </h3>
            {{#if this.singleUser.favoriteCharacter}}
            <div class="fav-char">
                <a href="/characters/{{this.singleUser.favoriteCharacter._id}}/details">
                    <img src="{{this.singleUser.favoriteCharacter.image}}" alt="img">
                    <h4>{{capitalize this.singleUser.favoriteCharacter.name}}</h4>
                </a>
            </div>
            {{/if}}
            {{/unless}}
            
        </div>
        {{#if this.isAdmin}}
            {{#if this.isRoleUser}}
            <div class="fav-char-container card-body d-flex flex-column align-items-center">
                <form action="/admin/{{this.singleUser._id}}/delete-user" method="post">
                    <button class="btn btn-danger">Delete User</button>
                </form>
            </div>
            {{/if}}
        {{/if}}
        </div>
    </div>
</div>